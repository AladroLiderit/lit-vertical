<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

    <record model="ir.ui.view" id="account_invoice_kanban_view">
        <field name="name">account.invoice.kanban.view</field>
        <field name="model">account.invoice</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="partner_id"/>
                <field name="number"/>
                <field name="date_due"/>
                <field name="date_invoice"/>
                <field name="origin"/>
                <field name="amount_total"/>
                <field name="residual"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open">
                                        <b>Factura: </b><field name="number"/>
                                    </a>
                                </h4>
                                <ul>
                                    <li><b>Cliente: </b><field name="partner_id"/></li>
                                    <li><b>Origen: </b><field name="origin"/></li>
                                    <li><b>Fecha: </b><field name="date_invoice"/></li>
                                    <li><b>Vencimiento: </b><field name="date_due"/></li>
                                    <li><b>Total: </b><field name="amount_total"/></li>
                                    <li><b>Saldo: </b><field name="residual"/></li>
                                    <li><b>Estado: </b><field name="state"/></li>
                                </ul>
                            </div>
                        </div>
                    </t> 
                </templates>
            </kanban>
        </field> 
    </record>


